{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "strict": true,
    "types": ["webmidi"]
  },
  "include": ["src/**/*", "*.ts"],
  "references": [
    { "path": "../contracts" },
    { "path": "../engine" },
    { "path": "../adapters" }
  ]
}
