{
  "name": "rapid-repeated-notes",
  "description": "Same pitch played twice rapidly creates two distinct notes",
  "config": {
    "partId": "default",
    "attackDurationMs": 50,
    "releaseWindowMs": 500
  },
  "steps": [
    {
      "t": 0,
      "input": {
        "t": 0,
        "source": "midi",
        "stream": "test",
        "inputs": [
          { "type": "midi_note_on", "t": 0, "note": 60, "velocity": 100, "channel": 0 }
        ]
      },
      "expected": {
        "noteCount": 1,
        "notes": [
          { "pitch": { "pc": 0, "octave": 4 }, "phase": "attack", "velocity": 100 }
        ],
        "dynamics": { "level": 0.7874015748031497, "trend": "stable" }
      }
    },
    {
      "t": 50,
      "input": {
        "t": 50,
        "source": "midi",
        "stream": "test",
        "inputs": [
          { "type": "midi_note_off", "t": 50, "note": 60, "channel": 0 }
        ]
      },
      "expected": {
        "noteCount": 1,
        "notes": [
          { "pitch": { "pc": 0, "octave": 4 }, "phase": "release", "velocity": 100 }
        ],
        "dynamics": { "level": 0.23622047244094488, "trend": "stable" }
      }
    },
    {
      "t": 100,
      "input": {
        "t": 100,
        "source": "midi",
        "stream": "test",
        "inputs": [
          { "type": "midi_note_on", "t": 100, "note": 60, "velocity": 90, "channel": 0 }
        ]
      },
      "expected": {
        "noteCount": 2,
        "notes": [
          { "pitch": { "pc": 0, "octave": 4 }, "phase": "release", "velocity": 100 },
          { "pitch": { "pc": 0, "octave": 4 }, "phase": "attack", "velocity": 90 }
        ],
        "dynamics": { "level": 0.7086614173228346, "trend": "stable" }
      }
    },
    {
      "t": 150,
      "input": {
        "t": 150,
        "source": "midi",
        "stream": "test",
        "inputs": [
          { "type": "midi_note_off", "t": 150, "note": 60, "channel": 0 }
        ]
      },
      "expected": {
        "noteCount": 2,
        "notes": [
          { "pitch": { "pc": 0, "octave": 4 }, "phase": "release", "velocity": 100 },
          { "pitch": { "pc": 0, "octave": 4 }, "phase": "release", "velocity": 90 }
        ],
        "dynamics": { "level": 0.22440944881889763, "trend": "stable" }
      }
    }
  ]
}
