{
  "name": "orphan-note-off",
  "description": "note_off without prior note_on is gracefully ignored",
  "config": {
    "partId": "default",
    "attackDurationMs": 50,
    "releaseWindowMs": 500
  },
  "steps": [
    {
      "t": 0,
      "input": {
        "t": 0,
        "source": "midi",
        "stream": "test",
        "inputs": [
          { "type": "midi_note_off", "t": 0, "note": 60, "channel": 0 }
        ]
      },
      "expected": {
        "noteCount": 0,
        "notes": [],
        "dynamics": { "level": 0, "trend": "stable" }
      }
    },
    {
      "t": 100,
      "input": {
        "t": 100,
        "source": "midi",
        "stream": "test",
        "inputs": [
          { "type": "midi_note_on", "t": 100, "note": 64, "velocity": 80, "channel": 0 }
        ]
      },
      "expected": {
        "noteCount": 1,
        "notes": [
          { "pitch": { "pc": 4, "octave": 4 }, "phase": "attack", "velocity": 80 }
        ],
        "dynamics": { "level": 0.6299212598425197, "trend": "stable" }
      }
    },
    {
      "t": 200,
      "input": {
        "t": 200,
        "source": "midi",
        "stream": "test",
        "inputs": [
          { "type": "midi_note_off", "t": 200, "note": 60, "channel": 0 }
        ]
      },
      "expected": {
        "noteCount": 1,
        "notes": [
          { "pitch": { "pc": 4, "octave": 4 }, "phase": "sustain", "velocity": 80 }
        ],
        "dynamics": { "level": 0.6299212598425197, "trend": "stable" }
      }
    }
  ]
}
